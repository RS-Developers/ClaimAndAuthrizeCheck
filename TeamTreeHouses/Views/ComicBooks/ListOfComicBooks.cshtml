@model IEnumerable<TeamTreeHouses.Models.ComicBook>

@{
    ViewBag.Title = "ListOfComicBooks";
}

<h2>ListOfComicBooks</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Favorite)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IssueNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SeriesTitle)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DescriptionHtml)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DisplayText)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ConvertImageFileName)
        </th>
        <th></th>
    </tr>

    @if (Model != null)
    {
        foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Favorite)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IssueNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SeriesTitle)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DescriptionHtml)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DisplayText)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ConvertImageFileName)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }
    }
</table>
